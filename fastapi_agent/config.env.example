# FastAPI AI Agent Service Configuration

# App Settings
APP_NAME=AI Sales Agent Service
APP_VERSION=1.0.0
DEBUG=False

# Django Backend API
DJANGO_API_URL=http://web:8000
DJANGO_API_KEY=change-this-in-production

# OpenAI API (for ai_agent compatibility)
OPENAI_API_KEY=your-openai-api-key
DIGITALOCEAN_AGENT_URL=your-digitalocean-agent-url

# Ollama LLM
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=phi3:mini

# Database
DATABASE_URL=postgresql://agent:agent@fastapi_db:5432/agent_db

# ChromaDB
CHROMA_PERSIST_DIR=./chroma_db

# Audio Settings
WHISPER_MODEL=base
TTS_LANGUAGE=ar
AUDIO_STORAGE_PATH=./recordings

# WebRTC
STUN_SERVER=stun:stun.l.google.com:19302

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000", "http://127.0.0.1:8000"]
